<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Academic_Achievments.AcademicFragment">

    <!-- Editable ScrollView -->
    <ScrollView
        android:id="@+id/scrollViewath"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="academic achievments">

        <!-- Your content inside the ScrollView goes here -->

    </ScrollView>

    <!-- Floating Action Button (FAB) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:backgroundTint="#00BCD4"
        app:elevation="6dp"
        app:srcCompat="@android:drawable/ic_input_add"
        android:contentDescription="add academic"/>

</FrameLayout>